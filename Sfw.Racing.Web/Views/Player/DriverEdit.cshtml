@model Sfw.Racing.DataRepository.Model.Driver

<div>
    <div class="pull-right label-as-badge label label-success">
        <h4 class="Cost">@Model.Cost.ToString("0.##")</h4> million
    </div>
    <h4 class="DriverName">@Html.DisplayFor(model => model.Name)&nbsp;</h4>
    <div class="DriverConstructor">
        @Model.ConstructorName
    </div>
    <div>
        @Html.HiddenFor(model => model.ConstructorId)
        

        <div class="thumbnail">
            <img src="@Url.Content("~/"+(@Model.Image == null ? "Content/drivers/unknown.png":Model.Image))" alt="@Model.Name" class="img-responsive DriverPic" />
        </div>

    </div>
</div>